pkgname=scrn_rotd-git
pkgrel=1
pkgver=8.7c43f31
arch=('any')
depends=('ddcutil' 'libx11')
makedpends=('cmake' 'git')
provides=('scrn_rotd')
conflicts=('scrn_rotd')
source=("${pkgname}::git+https://github.com/jw910731/scrn_rotd.git")
sha512sums=('SKIP')

pkgver() {
    cd "$srcdir/$pkgname"
    echo "$(git rev-list --count master).$(git rev-parse --short master)"
}

build() {
    cd "$srcdir/$pkgname"
    mkdir -p build
    cd build
    cmake ..
    make
}

package() {
    cd "$srcdir/$pkgname"
    pushd build
    make DESTDIR="${pkgdir}" install
    popd
    mkdir -p "${pkgdir}/usr/lib/systemd/user/"
    cp scrn_rotd.service "${pkgdir}/usr/lib/systemd/user/"
}
